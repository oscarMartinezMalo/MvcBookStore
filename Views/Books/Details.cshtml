
@model MvcBookStore.Models.Book

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="alert alert-warning book-card" role="alert">
    <h2 class="title">@Model.Name</h2>
    <p><strong>Genre:</strong> @Model.Genre.Name</p>
    <hr>
    <p><strong>Day Added:</strong> @Model.DateAdded.ToLongDateString()</p>
    <hr>
    <p><strong>Release Date:</strong> @Model.ReleaseDate.ToLongDateString()</p>
    <hr>
    <p><strong>Number in Stock:</strong> @Model.NumberInStock</p>
</div>